<article class="w3-card-4 w3-margin w3-white">

  <div class="w3-container w3-padding-8">
    <h3><b><%= article.title %></b></h3>
    <h6><span class="w3-opacity update_time"><%= article.updated_at.localtime.strftime "Last updated on %m/%d/%Y"  %></span></h6>
  </div>

  <div class="w3-container">
    <p><%= article.content %></p>
    <p class="author_name">
      &mdash;<%= article.user %>
    </p>
  </div>
</article>
