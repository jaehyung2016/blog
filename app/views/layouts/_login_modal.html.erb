<div class="w3-modal w3-animate-opacity" id="login_box">
  <div class="w3-modal-content w3-card-8 w3-animate-zoom w3-display-container">
    <span class="w3-closebtn w3-container w3-display-topright w3-theme-transparent w3-text-white w3-hover-text-aqua" title="Close">&times;</span>

    <nav class="w3-row w3-navbar w3-theme-d4 w3-padding-0" id="tab_links">
      <div class="w3-col s6 m6 l6 w3-padding-8 w3-hover-theme w3-theme-d1">
        <a href="#login_tab">
          <b>Log&nbsp;in</b>
        </a>
      </div>
      <div class="w3-col s6 m6 l6 w3-padding-8 w3-hover-theme">
        <%= link_to new_user_path(format: :js), remote: true, id: "signup_tab_link"  do %>
          <b>Sign&nbsp;up</b>
        <% end %>
      </div>
    </nav>

    <div id="login_tab">
      <%= render "layouts/login_form" %>
    </div>

    <div id="signup_tab">
    </div>

  </div>
</div>
